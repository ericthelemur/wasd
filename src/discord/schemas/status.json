{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "connStatus": {
            "type": "string",
            "enum": [
                "connected",
                "connecting",
                "disconnected",
                "error",
                "retrying"
            ],
            "default": "disconnected"
        }
    },
    "type": "object",
    "properties": {
        "connected": {
            "$ref": "#/definitions/connStatus"
        },
        "postSchedule": {
            "type": "boolean"
        },
        "postDonations": {
            "type": "boolean"
        },
        "startAndEndEvents": {
            "type": "boolean"
        }
    },
    "required": [
        "connected"
    ],
    "default": {
        "connected": "disconnected"
    }
}