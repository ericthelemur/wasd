{
    "$schema": "http://json-schema.org/draft-07/schema",
    "oneOf": [
        {
            "type": "null"
        },
        {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "title": {
                    "type": "string"
                },
                "artist": {
                    "type": "string"
                },
                "position": {
                    "type": "number",
                    "default": 0
                },
                "duration": {
                    "type": "number",
                    "default": 0
                },
                "artwork": {
                    "type": "string"
                }
            }
        }
    ]
}