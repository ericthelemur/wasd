{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "state": {
            "type": "string",
            "enum": [
                "BREAK",
                "INTRO",
                "RUN",
                "OUTRO",
                "INSERT"
            ]
        },
        "minsBehind": {
            "type": "number"
        }
    },
    "required": [
        "state"
    ],
    "default": {
        "state": "BREAK",
        "minsBehind": 0
    }
}