{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "knobs": {
            "type": "object",
            "properties": {
                "channels": {
                    "type": "array",
                    "minItems": 2,
                    "maxItems": 2,
                    "items": {
                        "type": [
                            "string",
                            "null"
                        ]
                    }
                },
                "rotateScale": {
                    "type": "number"
                }
            },
            "required": [
                "channels",
                "rotateScale"
            ]
        }
    },
    "required": [
        "knobs"
    ],
    "default": {
        "knobs": {
            "channels": [
                "RUN-1",
                "GAME-1"
            ],
            "rotateScale": 0.01
        }
    }
}