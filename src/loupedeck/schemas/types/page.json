{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "definitions": {
        "screen": {
            "type": "array",
            "minItems": 15,
            "maxItems": 15,
            "items": {
                "oneOf": [
                    {
                        "$ref": "cell/cellData.json"
                    },
                    {
                        "type": "null"
                    }
                ]
            }
        },
        "knobs": {
            "type": "object",
            "properties": {
                "channels": {
                    "type": "array",
                    "minItems": 2,
                    "maxItems": 2,
                    "items": {
                        "type": [
                            "string",
                            "null"
                        ]
                    }
                },
                "rotateScale": {
                    "type": "number"
                },
                "buttons": {
                    "type": "array",
                    "minItems": 2,
                    "maxItems": 2,
                    "items": {
                        "oneOf": [
                            {
                                "type": "null"
                            },
                            {
                                "$ref": "cell/state.json"
                            }
                        ]
                    },
                    "default": [
                        null,
                        null
                    ]
                }
            },
            "required": [
                "channels",
                "rotateScale",
                "buttons"
            ]
        }
    },
    "properties": {
        "screen": {
            "$ref": "#/definitions/screen"
        },
        "knobs": {
            "$ref": "#/definitions/knobs"
        },
        "buttons": {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": {
                "oneOf": [
                    {
                        "type": "null"
                    },
                    {
                        "$ref": "cell/state.json"
                    }
                ]
            }
        }
    },
    "required": [
        "screen"
    ]
}