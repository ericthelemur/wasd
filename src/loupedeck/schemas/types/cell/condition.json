{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "replicant": {
                "type": "string"
            },
            "field": {
                "type": "string"
            },
            "operator": {
                "enum": [
                    "=",
                    "!=",
                    "<",
                    "<=",
                    ">",
                    ">=",
                    "exists",
                    "not exists"
                ]
            },
            "values": {
                "type": "array"
            }
        },
        "additionalProperties": false,
        "required": [
            "replicant",
            "field",
            "operator",
            "values"
        ]
    }
}