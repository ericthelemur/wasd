{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "definitions": {
        "screen": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "types/cellData.json"
                    },
                    {
                        "type": "null"
                    }
                ]
            }
        },
        "knobs": {
            "type": "object",
            "properties": {
                "channels": {
                    "type": "array",
                    "minItems": 2,
                    "maxItems": 2,
                    "items": {
                        "type": [
                            "string",
                            "null"
                        ]
                    }
                },
                "rotateScale": {
                    "type": "number"
                }
            },
            "required": [
                "channels",
                "rotateScale"
            ]
        },
        "page": {
            "type": "object",
            "properties": {
                "screen": {
                    "$ref": "#/definitions/screen"
                },
                "interactions": {
                    "properties": {
                        "knobs": {
                            "$ref": "#/definitions/knobs"
                        }
                    },
                    "required": [
                        "knobs"
                    ]
                }
            },
            "required": [
                "screen",
                "interactions"
            ]
        }
    },
    "properties": {
        "current": {
            "type": "string"
        },
        "pages": {
            "type": "object",
            "properties": {
                "default": {
                    "$ref": "#/definitions/page"
                }
            },
            "additionalProperties": {
                "$ref": "#/definitions/page"
            },
            "required": [
                "default"
            ]
        }
    },
    "additionalProperties": false,
    "required": [
        "current",
        "pages"
    ],
    "default": {
        "current": "default",
        "pages": {
            "default": {
                "screen": [
                    null,
                    null,
                    null,
                    null,
                    null,
                    null,
                    null,
                    null,
                    null,
                    null,
                    null,
                    null,
                    null,
                    null,
                    null
                ],
                "interactions": {
                    "knobs": {
                        "channels": [
                            "RUN-1",
                            "GAME-1"
                        ],
                        "rotateScale": 0.01
                    }
                }
            }
        }
    }
}