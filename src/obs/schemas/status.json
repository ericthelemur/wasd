{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"definitions": {
		"connStatus": {
			"type": "string",
			"enum": [
				"connected",
				"connecting",
				"disconnected",
				"error",
				"retrying"
			],
			"default": "disconnected"
		}
	},
	"type": "object",
	"description": "Status of OBS outputs",
	"additionalProperties": false,
	"properties": {
		"connected": {
			"$ref": "#/definitions/connStatus"
		},
		"streaming": {
			"type": "boolean"
		},
		"recording": {
			"type": "boolean"
		},
		"transitioning": {
			"type": "boolean"
		},
		"studioMode": {
			"type": "boolean"
		},
		"moveCams": {
			"type": "boolean"
		},
		"controlRecording": {
			"type": "boolean"
		}
	},
	"required": [
		"connected",
		"streaming",
		"recording",
		"transitioning",
		"studioMode",
		"moveCams",
		"controlRecording"
	],
	"default": {
		"connected": "disconnected",
		"streaming": false,
		"recording": false,
		"transitioning": false,
		"studioMode": false,
		"moveCams": true,
		"controlRecording": true
	}
}