  "nodecg": {
    "compatibleRange": "^2.0.0",
    "bundleDependencies": {
      "nodecg-ticker-control": "*"
    },
    "dashboardPanels": [
      {
        "name": "countdown-control",
        "title": "Countdown",
        "width": 2,
        "file": "countdown.dashboard.html",
        "headerColor": "#525F78"
      }
    ],
    "graphics": [
      {
        "file": "bar/bar.graphic.html",
        "width": 1920,
        "height": 70,
        "singleInstance": false
      },
      {
        "file": "background/background.graphic.html",
        "width": 1920,
        "height": 1080,
        "singleInstance": false
      },
      {
        "file": "overlay/RUN-1.html",
        "width": 1920,
        "height": 1010,
        "singleInstance": true
      },
      {
        "file": "overlay/RUN-2.html",
        "width": 1920,
        "height": 1010,
        "singleInstance": true
      },
      {
        "file": "overlay/RUN-RACE.html",
        "width": 1920,
        "height": 1010,
        "singleInstance": true
      },
      {
        "file": "overlay/RUN-BACKUP.html",
        "width": 1920,
        "height": 1010,
        "singleInstance": true
      },
      {
        "file": "break/BREAK.html",
        "width": 1920,
        "height": 1010,
        "singleInstance": false
      },
      {
        "file": "overlay/COMMS.html",
        "width": 1920,
        "height": 1010,
        "singleInstance": false
      }
    ]
  },
  "scripts": {
    "start": "cd .. && npm run start",
    "build": "cross-env-shell node scripts/build.mjs $npm_package_name",
    "watch": "npm run build -- --watch",
    "clean": "npm run build -- --clean-only",
    "types": "node scripts/types.mjs",
    "nodemon": "nodemon --config ../wasd-common/shared/nodemon.json",
    "dev": "concurrently --kill-others \"npm run watch -- --types\" \"npm run watch -- --browser\" \"npm run nodemon\""
  },
  "dependencies": {
    "@parcel/config-default": "^2.12.0",
    "@parcel/core": "^2.12.0",
    "@parcel/reporter-cli": "^2.12.0",
    "@parcel/transformer-sass": "^2.12.0",
    "@parcel/validator-typescript": "^2.12.0",
    "chalk": "3.0.0",
    "clone": "^2.1.2",
    "fs-extra": "7.0.1",
    "get-current-line": "^7.4.0",
    "json-schema-defaults": "0.4.0",
    "json-schema-to-typescript": "11.0.3",
    "markdown-to-jsx": "^7.4.1",
    "moment": "^2.30.0",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-bootstrap": "^2.9.1",
    "react-bootstrap-icons": "^1.10.3",
    "react-contenteditable": "^3.3.7",
    "react-css-transition-replace": "^5.0.1",
    "react-dom": "^18.2.0",
    "react-fitty": "^1.0.1",
    "react-textfit": "git+http://github.com/ericthelemur/react-textfit.git",
    "react-transition-group": "^4.4.5",
    "speedcontrol-util": "^0.6.1",
    "ts-node": "^10.9.1",
    "use-nodecg": "github:ericthelemur/use-nodecg"
  },
  "devDependencies": {
    "@nodecg/types": "^2.0.0",
    "@types/clone": "^2.1.4",
    "@types/node": "^18",
    "@types/obs-studio": "^2.17.2",
    "@types/react": "^18.2.0",
    "@types/react-beautiful-dnd": "^13.1.7",
    "@types/react-css-transition-replace": "^2.1.7",
    "@types/react-dom": "^18.2.0",
    "@types/react-textfit": "^1.1.4",
    "concurrently": "*",
    "cross-env": "*",
    "glob": "^10.2.7",
    "nodemon": "*",
    "typescript": "^5.1.3"
  },
  "license": "MIT",
  "@parcel/bundler-default": {
    "minBundles": 1,
    "minBundleSize": 3000,
    "maxParallelRequests": 20,
    "manualSharedBundles": [
      {
        "name": "vendor",
        "root": "./shared.ts",
        "assets": [
          "**/*"
        ],
        "types": [
          "js",
          "ts"
        ],
        "split": 1
      }
    ]
  }
}