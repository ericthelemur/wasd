{
    "watch": [
        "src/*/extension/*",
        "src/index.extension.ts",
        "src/types/*"
    ],
    "exec": "node ./scripts/build.mjs -- --extension && npx nodecg start",
    "ext": "js,ts,json,yaml",
    "delay": 500,
    "ignoreRoot": [
        ".git",
        "node_modules",
        ".nyc_output",
        ".parcel-cache",
        "coverage",
        "extension",
        "graphics",
        "dashboard",
        "cfg",
        "db",
        "logs",
        "scripts"
    ]
}